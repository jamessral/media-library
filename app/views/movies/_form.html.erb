      <ul>
      <% movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group'>

    <div class="control-label col-sm-2">
      <%= f.label :name %>
    </div>
    <div class='col-sm-8'>
      <%= f.text_field :name, class: 'form-control', placeholder: "Movie Title", autofocus: true %>
    </div>
  </div>
  <div class='form-group'>
    <div class="control-label col-sm-2">
      <%= f.label :director %>
    </div>
    <div class='col-sm-8'>
      <%= f.text_field :director, class: 'form-control', placeholder: "Director" %>
    </div>
  </div>
 
  <div class='form-group'>
    <div class="control-label col-sm-2">
      <%= f.label :year %>
    </div>
    <div class='col-sm-8'>
      <%= f.number_field :year, class: 'form-control', placeholder: "Year" %>
    </div>
  </div>
  <div class='form-group'>
    <div class="col-sm-8 col-sm-offset-2">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
