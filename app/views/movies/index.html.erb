<p id="notice"><%= notice %></p>

<div class='well well-lg'>
<h1 class='center'>Movies</h1>

<table class='table center col-md-8'>
  <thead>
    <tr>
      <th class='movie-header'>Name</th>
      <th class='movie-header'>Director</th>
      <th class='movie-header'>Year</th>
      <th class='movie-header'>Format</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.director %></td>
        <td><%= movie.year %></td>
	<td><%= movie.format %></td>
        <td><%= link_to 'Show', movie, class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie), class: "btn btn-sm btn-primary" %></td>
	<td><%= link_to 'Destroy', movie, class: "btn btn-danger btn-sm",
		                          method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path, class: "btn btn-success btn-md" %>
</div>
