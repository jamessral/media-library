<p id="notice"><%= notice %></p>

<div class='well show-listing'>
  <p>
    <strong>Name:</strong>
    <%= @show.name %>
  </p>

  <p>
    <strong>Season:</strong>
    <%= @show.season %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= @show.year %>
  </p>

  <% unless @show.format.nil? || @show.format == '' %>
  <p>
    <strong>Format:</strong>
    <%= @show.format %>
  </p>
  <% end %>

  <%= link_to 'Edit', edit_show_path(@show), class: 'btn btn-sm btn-primary' %> |
  <%= link_to 'Back', shows_path, class: 'btn btn-sm btn-primary' %>
</div>
