<p id="notice"><%= notice %></p>

<div class='well well-lg'>
<h1 class='center'>Shows</h1>

<%= paginate @shows %>

<table class='table center col-md-8'>
  <thead>
    <tr>
      <th class='show-header'>Name</th>
      <th class='show-header'>Season</th>
      <th class='show-header'>Year</th>
      <th class='show-header'>Format</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.name %></td>
        <td><%= show.season %></td>
        <td><%= show.year %></td>
	<td><%= show.format %></td>
        <td><%= link_to 'Show', show, class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_show_path(show), class: "btn btn-sm btn-primary" %></td>
	<td><%= link_to 'Destroy', show, class: "btn btn-danger btn-sm",
		                          method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Show', new_show_path, class: "btn btn-success btn-md" %>
</div>
